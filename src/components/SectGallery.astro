<style lang="scss">
  @use "../styles/10-functions/theme-accessor" as *;
@import '../styles/20-mixins/media-query.scss';

.gallery {
  display: grid;
  grid-template-areas: 
    "content1 image1 image1"
    "image2 image2 image3"
    "image2 image2 content2";
  gap: var(--space-gutter-s);
  grid-template-rows: auto auto 1fr;

  & :where(img, picture) {
    inline-size: 100%;
    block-size: 100%;
    object-fit: cover;
  }

  & p {
    max-inline-size: 22ch;
  }
}

.gallery__content--1 {
  grid-area: content1;
  margin-block: auto;
}

.gallery__content--2 {
  grid-area: content2;
  background-color: get(color, almost-black);
  color: get(color, white);
  display: flex;
  flex-direction: column;

  & h2 {
    color: get(color, white);
    text-wrap: unset;
    max-inline-size: max-content;
    max-inline-size: 10ch;
  }

  & p {
    max-inline-size: 25ch;
  }
  
  & :first-child {
    margin-block-start: auto;
  }
  
  & :last-child {
    margin-block-end: auto;
  }
}

.gallery__image--1 {
  grid-area: image1;
}

.gallery__image--2 {
  grid-area: image2;
}

.gallery__image--3 {
  grid-area: image3;
}

@include media-query('up-to', 'tablet') {
  .gallery {
    grid-template-areas: 
    "image1"
    "content1"
    "image2"
    "image3"
    "content2";

    p {
      max-inline-size: unset;
    }
  }
}
</style>